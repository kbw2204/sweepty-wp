.form-group
  label(for="content") Contents
  textarea.form-control(name="content", rows="10")= event.content

.form-group
  label(for="tags") Tags
  input.form-control(type="text", name="tags", placeholder="tags separated by spaces", value=event.tags ? event.tags.join(" ") : "")

